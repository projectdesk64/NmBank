{
  "files": [],
  "references": [{ "path": "./tsconfig.app.json" }, { "path": "./tsconfig.node.json" }],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    // Type safety improvements - gradually enabling stricter checks
    "noImplicitAny": false, // TODO: Enable after fixing implicit any types
    "noUnusedParameters": true, // Enabled to catch unused function parameters
    "skipLibCheck": true,
    "allowJs": true,
    "noUnusedLocals": true, // Enabled to catch unused variables
    "strictNullChecks": false // TODO: Enable after fixing null/undefined handling
  }
}
